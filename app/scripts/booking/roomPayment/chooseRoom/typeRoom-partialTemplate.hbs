                    <a class="btn-lg btn-block btn btn-default details hidden" role="button" data-toggle="collapse" href="#collapse-view-1" aria-expanded="true" aria-controls="collapse-rooms">Details</a>
                </article>

            </section>
            <a class="btn-lg btn-block btn btn-default details hidden" role="button" data-toggle="collapse" href=".collapse-bed" aria-expanded="true" aria-controls="collapse-bed">Details</a>



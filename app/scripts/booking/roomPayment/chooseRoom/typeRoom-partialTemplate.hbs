                        <input type="radio" id="radio-list-bed-0" class="check" name=bed {{#ifCond selectedBed 'Queen' }} checked="true" {{/ifCond}}/>
                        
                        <label for="radio-list-bed-0" data-cover="assets/img/queen-bed.jpg" data-cover-alt="Image for bed" data-cover-size="sm" class="cover">
                            <div class="radio-list-overlay" >
                                <h4 class="title">2 Queen</h4>
                                <div class="subtitle">Twice the comfort</div>
                                <div class="price" hidden>+$0</div>
                            </div>
                        </label>
                        
                    </div>
                </article>

                <article class="radio-list-block col-md-6">
                    <div class="radio-list-body">
                        <input type="radio" id="radio-list-bed-1" class="check" name=bed {{#ifCond selectedBed 'King' }} checked="true" {{/ifCond}} />


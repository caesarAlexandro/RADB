<section class="panel panel-default {{#if roomPreference.room }}panel-success{{/if}}">
    <a href="#collapseOne" class="panel-heading reservation-accordion" role="tab" id="headingOne" role="button" data-toggle="collapse" aria-expanded="true" aria-controls="collapseOne">
        <h4 class="panel-title">
                What type of room?
                <i class="fa chevron"></i>
                <i class="fa fa-check"></i>
                <span class="value">{{selectedRoom}}</span>
       </h4>
    </a>
    <div id="collapseOne" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="headingOne">
        <div class="container-fluid">

            <section class="radio-list row" id="radio-list-room">



                <article class="radio-list-block col-md-6">

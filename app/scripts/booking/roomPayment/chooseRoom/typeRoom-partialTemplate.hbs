<section class="panel panel-default {{#if roomPreference.room }}panel-success{{/if}}">
    <a href="#collapseOne" class="panel-heading reservation-accordion" role="tab" id="headingOne" role="button" data-toggle="collapse" aria-expanded="true" aria-controls="collapseOne">
        <h4 class="panel-title">
                <span>1</span> Select a Room
                <i class="fa angle"></i>
                <i class="fa fa-check"></i>
                <!--<span class="value">{{selectedRoom}}</span>-->
       </h4>
    </a>
    <div id="collapseOne" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="headingOne">
        <div class="container-fluid">
            <h4>What type of room?</h4>

            <section class="radio-list row" id="radio-list-room">



                <article class="radio-list-block col-md-4">
                    <div class="radio-list-body">
                        <input type="radio" id="radio-list-room-0" class="check" name=room {{#ifCond selectedRoom 'Guest' }} checked="true" {{/ifCond}}></input>
                        <label for="radio-list-room-0" data-cover="assets/img/guest-room.jpg" data-cover-alt="Image for room"  data-cover-size="sm" class="cover">
                            <div class="radio-list-overlay">
                                <h4 class="title">Guest</h4>

                            </div>
                        </label>

                    </div>


                </article>
                 <article class="radio-list-block col-md-4">
                    <div class="radio-list-body">
                        <input type="radio" id="radio-list-room-1" class="check" name=room {{#ifCond selectedRoom 'Business' }} checked="true" {{/ifCond}}></input>
 
                        <label for="radio-list-room-1" data-cover="assets/img/deluxe-room.jpg" data-cover-alt="Image for room"  data-cover-size="sm" class="cover">

                            <div class="radio-list-overlay">
                                <h4 class="title">Business Class</h4>

                            </div>
                        </label>

                    </div>

                </article>
                <article class="radio-list-block col-md-4">
                    <div class="radio-list-body">
                        <input type="radio" id="radio-list-room-2" class="check" name=room {{#ifCond selectedRoom 'Suite' }} checked="true" {{/ifCond}}></input>
 
                        <label for="radio-list-room-2" data-cover="assets/img/deluxe-room.jpg" data-cover-alt="Image for room"  data-cover-size="sm" class="cover">

                            <div class="radio-list-overlay">
                                <h4 class="title">Suite</h4>
                            </div>
                        </label>

                    </div>

                </article>

               

            </section>
            <a class="btn-lg btn-block btn btn-default details hidden" role="button" data-toggle="collapse" href=".collapse-room" aria-expanded="true" aria-controls="collapse-room">Details</a>
        </div>
         <div class="container-fluid">
<h4>What type of Arrangement?</h4>
            <section class="radio-list row" id="radio-list-bed">



                <article class="radio-list-block col-md-6">
                    <div class="radio-list-body">
                        <input type="radio" id="radio-list-arrangement-0" class="check" name=arrangement {{#ifCond selectedArrangement 'Standard' }} checked="true" {{/ifCond}}/>
                        <label for="radio-list-arrangement-0" data-cover-alt="Image for bed" data-cover-size="sm" class="cover" style="background-color: #034EA0; border-right: 1px white solid;">
                            <div class="radio-list-overlay" >
                                <h4 class="title">Standard</h4>
                                <div class="price" hidden>+$0</div>
                            </div>
                        </label>
                    </div>
                </article>

                <article class="radio-list-block col-md-6">
                    <div class="radio-list-body">
                        <input type="radio" id="radio-list-arrangement-1" class="check" name=arrangement {{#ifCond selectedArrangement 'Corner' }} checked="true" {{/ifCond}} />
                        <label for="radio-list-arrangement-1" data-cover-alt="Image for bed" data-cover-size="sm" class="cover" style="background-color: #034EA0; border-right: 1px white solid;">
                            <div class="radio-list-overlay">
                                <h4 class="title">Corner</h4>
                                <div class="price" hidden>+$15</div>
                            </div>
                        </label>
                    </div>
                </article>

            </section>

        </div>

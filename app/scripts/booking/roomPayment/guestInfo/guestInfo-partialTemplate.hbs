<section class="panel">
   <a class="panel-heading reservation-accordion collapsed" role="tab" id="headingThree" role="button" data-toggle="collapse" href="#collapseThree" aria-expanded="false" aria-controls="collapseThree">
      <h4 class="panel-title">
         <span>3</span>
         Guest Information
         <i class="fa chevron"></i>
         <i class="fa fa-check"></i>
         <span class="value">{{firstName}} {{lastName}} {{email}} {{phoneNumber}} {{country}}</span>
      </h4>
   </a>
   <div id="collapseThree" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingThree">
      <div class="panel-body">
         <section>
            <div>
               <p>Returning guest? <a href="#">Sign in</a></p>
               <form action="#">
                  <div class="col-sm-6">
                    <div class="form-group">
                        <label for="titlename" class="sr-only">Title</label>
                        <input type="text" id="titlename" class="form-control" name="titlename" placeholder="Title" value="{{titleName}}">
                     </div>
                     <div class="form-group">
                        <label for="middlename" class="sr-only">Middle Name</label>
                        <input type="text" id="middlename" class="form-control" name="middlename" placeholder="Middle Name" value="{{middleName}}">
                     </div>
                     <div class="form-group">
                        <label for="addressline1" class="sr-only">Address Line 1</label>
                        <input type="text" id="addressline1" class="form-control" name="addressline1" placeholder="Address" value="{{addressLine1}}">
                     </div>
                     <div class="form-group">
                        <label for="city" class="sr-only">City</label>
                        <input type="text" id="city" class="form-control" name="city" placeholder="City" value="{{city}}">
                     </div>
                     <div class="form-group">
                        <input type="text" id="zip" class="form-control" name="zipcode" placeholder="ZIP/Postal Code" value="{{zip}}">
                     </div>
                     <div class="form-group">
                        <label for="telephone" class="sr-only" >Phone Number</label>
                        <input type="text" id="telephone" class="form-control" name="telephone" placeholder="Phone Number" value="{{phoneNumber}}">
                     </div>
                     <div class="form-group">
                        <label for="email" class="sr-only">
                        <input type="text" class="form-control" name="email" placeholder="Email Address" >
                        </label>
                        <input type="text" id="email" class="form-control" name="email" placeholder="Email Address" value="{{email}}">
                     </div>
                    
                     
                  </div>
                  <div class="col-sm-6">
                     <div class="form-group">
                        <label for="firstname" class="sr-only">First Name</label>
                        <input type="text" id="firstname" class="form-control" name="firstname" placeholder="First Name" value="{{firstName}}">
                     </div>
                     <div class="form-group">
                        <label for="lastname" class="sr-only">Last Name</label>
                        <input type="text" id="lastname" class="form-control" name="lastname" placeholder="Last Name" value="{{lastName}}">
                     </div>
                     <div class="form-group">
                        <label for="addressline2" class="sr-only">Address Line 2</label>
                        <input type="text" id="addressline2" class="form-control" name="addressline2" placeholder="Address" value="{{addressline2}}">
                     </div>
                     <div class="form-group">
                        <label for="country" class="sr-only"></label>
                        <select name="country" id="country" class="form-control">
                           <option value="" disabled selected>Country</option>
                           <option value="us" {{#ifCond country 'United States' }} selected {{/ifCond}}>Unites States</option>
                           <option value="mx" {{#ifCond country 'Mexico' }} selected {{/ifCond}}>Mexico</option>
                           <option value="ch" {{#ifCond country 'China' }} selected {{/ifCond}}>China</option>
                           <option value="au" {{#ifCond country 'Australia' }} selected {{/ifCond}}>Australia</option>
                           <option value="uk" {{#ifCond country 'United Kingdom' }} selected {{/ifCond}}>United Kingdom</option>           
                        </select>
                     </div>
                     
                  </div>
               </form>
            </div>
         </section>
      </div>
   </div>
</section>